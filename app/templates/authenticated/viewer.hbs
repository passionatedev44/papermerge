<div class="panels d-flex row">
  <Viewer
    @model={{@model}}
    @extranode={{this.extranode}}
    @onPanelToggle={{this.onPanelToggle}}
    @dualPanelMode={{this.dualpanel_mode}}
    @hint="left" />

  {{#if this.dualpanel_mode}}
    <Commander
      @node={{this.extranode}}
      @extradoc={{@model}}
      @onPanelToggle={{this.onPanelToggle}}
      @dualPanelMode={{this.dualpanel_mode}}
      @hint="right" />
  {{/if}}
</div>
