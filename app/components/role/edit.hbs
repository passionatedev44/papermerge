<div class="mb-3">
  <Label @for="name" @text="Name" />
  <Input @value={{@role.name}}
    class="form-control"
    id="name"
    placeholder="Role's name" />
</div>

<div class="d-flex flex-wrap permissions">
  {{#each this.permission_groups as |perm_group|}}
  <Role::PermissionGroup
    @perm_group={{perm_group}}
    @role={{@role}} />
  {{/each}}
</div>

<div class="mb-3">
  <Button::Submit @onClick={{this.onSubmit}} />
  <Button::Cancel @route="authenticated.roles"/>
</div>