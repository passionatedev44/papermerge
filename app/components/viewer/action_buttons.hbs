<div>
  <Button::DownloadDocumentVersion
    @document_versions={{@document_versions}} />
    {{#if @isLocked}}
      <button
        class="btn btn-light"
        type="button"
        disabled
        {{on "click" @onRunOCR}}>
          <OcrStatus @status={{@ocrStatus}} />
        Run OCR
      </button>
    {{else}}
      <button
        class="btn btn-light"
        type="button"
        {{on "click" @onRunOCR}}>
          <OcrStatus @status={{@ocrStatus}} />
        Run OCR
      </button>
    {{/if}}
</div>