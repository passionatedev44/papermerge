<div class="node document {{if this.is_selected "checked"}}"
  {{draggable @model
    selectedItems=@selectedNodes
    onDragStart=this.onDragStart
    onDragendSuccess=@onDragendSuccess
    onDragendCancel=@onDragendCancel}}>
  <Input
    @type="checkbox"
    @checked={{this.is_selected}}
    {{on "change" this.onCheckboxChange}} />
  <div class="icon document"></div>

  <div class="title d-flex flex-row align-items-center">
    {{#if @model.ocr}}
      <OcrStatus
        @status={{@model.ocr_status}} />
    {{/if}}
    <div class="mx-2">
      {{yield}}
    </div>
  </div>

  <Node::Tags
    @tags={{this.tags}}
    @more_than_max_visible_tags={{this.more_than_max_visible_tags}} />

</div>
